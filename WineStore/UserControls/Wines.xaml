                    <TextBox x:Name="TitleWines">
                        
                    </TextBox>
                </GroupBox>
                <GroupBox x:Name="GroupBoxCategory"  Header="Category" Padding="5" >
                    <Expander Header="show more">
                        <StackPanel x:Name="CategoryWines" RadioButton.Checked="CategoryWines_Checked">
                    <RadioButton GroupName="Category"  Margin="3">Still Wines</RadioButton>
                    <RadioButton GroupName="Category" Margin="3">Sparkling Wines</RadioButton>
                    <RadioButton GroupName="Category" Margin="3">Sweet Wines</RadioButton>
                    <RadioButton GroupName="Category" Margin="3">Fortified Wines</RadioButton>
                </StackPanel>
                        </Expander>
                </GroupBox>
