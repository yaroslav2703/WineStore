        <TextBlock    Grid.Column="1"  Grid.ColumnSpan="4" Grid.Row="0"  TextAlignment="Center" Margin="5 20 5 10" FontStyle="Italic" FontSize="20">
           Browse Wines
            </TextBlock>
        <TextBlock Grid.Column="1"  Grid.Row="0" TextAlignment="Center" Margin="5 20 5 5">Click to sort by:</TextBlock>
        <ComboBox x:Name="sort"  Height="20" Width="120" VerticalAlignment="Top" Grid.Column="1"  Grid.Row="0" Margin="5 40 5 5" SelectionChanged="ComboBox_Selected">
           
                <ComboBoxItem Background="AntiqueWhite">
                    <TextBlock>Default sort</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem Background="AntiqueWhite">
                    <TextBlock>Lowest price</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem Background="AntiqueWhite">
                    <TextBlock>Highest price</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem Background="AntiqueWhite">
                    <TextBlock>A-Z</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem Background="AntiqueWhite">
                    <TextBlock>Z-A</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem Background="AntiqueWhite">
                    <TextBlock>Vintage(old to new)</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem  Background="AntiqueWhite">
