<UserControl x:Class="WineStore.Admin_page_elements.Export"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WineStore.Admin_page_elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
    <Grid  x:Name="GridMain"  Background="#FFEBCD">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="XMLView" Grid.Column="1" Margin="20 20 20 20" TextAlignment="Left" TextWrapping="WrapWithOverflow"></TextBlock>

            <Button Grid.Column="0"    Width="50" Click="Back_Click">
                <TextBlock  Foreground="#FFA2A2A2" FontSize="30" TextAlignment="Center" RenderTransformOrigin="0.539,0.48" >
                B  <LineBreak />
                A  <LineBreak />
                C  <LineBreak />
                K  <LineBreak />
                </TextBlock>
            </Button>

        </Grid>
    </ScrollViewer>
</UserControl>
